{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "incremental": true,

  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
}
}